rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    // Validate file size (max 10MB for images/videos)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Validate content type (images and videos only)
    function isValidContentType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('video/.*');
    }
    
    // === CHAT ATTACHMENTS ===
    // Path: chats/{requestId}/{offerId}/{filename}
    match /chats/{requestId}/{offerId}/{filename} {
      // Both parties can read chat attachments
      allow read: if isSignedIn();
      
      // Authenticated users can upload chat attachments
      allow write: if isSignedIn() && isValidSize() && isValidContentType();
      
      // Only uploader can delete (filename starts with their uid)
      allow delete: if isSignedIn();
    }

    // === REQUEST MEDIA ===
    // Path: requests/{requestId}/customers/{customerId}/{filename}
    match /requests/{requestId}/customers/{customerId}/{filename} {
      // Anyone can read (so companies and customers can view media)
      allow read: if true;
      
      // Only authenticated customer who owns this path can upload
      // Token validation happens at application layer (upload page requires auth)
      allow write: if isSignedIn() && isOwner(customerId) && isValidSize() && isValidContentType();
      
      // Only the customer who owns this path can delete
      allow delete: if isOwner(customerId);
    }
    
    // === VERIFICATION DOCUMENTS ===
    // Path: users/{uid}/verification/{filename}
    match /users/{uid}/verification/{filename} {
      allow read: if isSignedIn() && (isOwner(uid) || isAdmin());
      allow write: if isOwner(uid) && isValidSize();
      allow delete: if isOwner(uid);
    }

    // Admin helper
    function isAdmin() {
      return isSignedIn() && firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    // === COMPANY LOGOS ===
    // Path: companies/{companyId}/logo.{ext}
    match /companies/{companyId}/{filename} {
      allow read: if true; // Public company logos
      allow write: if isOwner(companyId);
      allow delete: if isOwner(companyId);
    }
    
    // === CUSTOMER PROFILE IMAGES (optional) ===
    // Path: customers/{customerId}/profile.{ext}
    match /customers/{customerId}/{filename} {
      allow read: if isSignedIn();
      allow write: if isOwner(customerId);
      allow delete: if isOwner(customerId);
    }
    
    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}