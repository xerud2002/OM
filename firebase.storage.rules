rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    // Validate file size (max 10MB for images/videos)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Validate content type (images and videos only)
    function isValidContentType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('video/.*');
    }
    
    // === REQUEST MEDIA ===
    // Path: requests/{requestId}/customers/{customerId}/{filename}
    match /requests/{requestId}/customers/{customerId}/{filename} {
      // Anyone can read (so companies and customers can view media)
      allow read: if true;
      
      // Authenticated customer can upload with validation
      // OR anyone can upload (for public upload links via token validation)
      allow write: if (isSignedIn() && isOwner(customerId) && isValidSize() && isValidContentType()) ||
                      (isValidSize() && isValidContentType());
      
      // Only the customer who owns this path can delete
      allow delete: if isOwner(customerId);
    }
    
    // === COMPANY LOGOS (optional future feature) ===
    // Path: companies/{companyId}/logo.{ext}
    match /companies/{companyId}/{filename} {
      allow read: if true; // Public company logos
      allow write: if isOwner(companyId);
      allow delete: if isOwner(companyId);
    }
    
    // === CUSTOMER PROFILE IMAGES (optional) ===
    // Path: customers/{customerId}/profile.{ext}
    match /customers/{customerId}/{filename} {
      allow read: if isSignedIn();
      allow write: if isOwner(customerId);
      allow delete: if isOwner(customerId);
    }
    
    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}