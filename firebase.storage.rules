rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    // === REQUEST MEDIA ===
    // Path: requests/{requestId}/customers/{customerId}/{filename}
    match /requests/{requestId}/customers/{customerId}/{filename} {
      // Anyone authenticated can read (so companies can view media)
      allow read: if isSignedIn();
      
      // Only the customer who owns this path can upload
      allow write: if isOwner(customerId);
      
      // No deletion (archives handle removal)
      allow delete: if false;
    }
    
    // === COMPANY LOGOS (optional future feature) ===
    // Path: companies/{companyId}/logo.{ext}
    match /companies/{companyId}/{filename} {
      allow read: if true; // Public company logos
      allow write: if isOwner(companyId);
      allow delete: if isOwner(companyId);
    }
    
    // === CUSTOMER PROFILE IMAGES (optional) ===
    // Path: customers/{customerId}/profile.{ext}
    match /customers/{customerId}/{filename} {
      allow read: if isSignedIn();
      allow write: if isOwner(customerId);
      allow delete: if isOwner(customerId);
    }
    
    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}